<section>
    <h1>Productos</h1>
    <table class="products-table">
        <caption>Listado de productos</caption>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Marca</th>
                <th>Precio</th>
                <th>Stock</th>
                <th>Categoría</th>
                <th>Descripción</th>
            </tr>
        </thead>
        <tbody>

            {{#each products}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>
                        <a href="/products/{{this.id}}" title="Ver más info">
                            {{this.name}}
                        </a>
                    </td>
                    <td>{{this.brand}}</td>
                    <td>${{this.price}}</td>
                    <td>{{this.stock}}</td>
                    <td>{{this.category}}</td>
                    <td>{{this.shortDescription}}</td>
                </tr>
            {{/each}}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="7">Se encontraron {{products.length}} productos</td>
            </tr>
        </tfoot>
    </table>
</section>