<h1>Alta de productos</h1>

<form action="/api/products" method="post">
    <div class="form-group">
        <label for="name">Nombre:</label>
        <input type="text" id="name" name="name">
    </div>

    <div class="form-group">
        <label for="brand">Marca:</label>
        <select id="brand" name="brand">
            <option>Seleccioná una marca</option>
            <option>Acer</option>
            <option>Apple</option>
            <option>ASUS</option>
            <option>Beats</option>
            <option>Bose</option>
            <option>Dell</option>
            <option>Google</option>
            <option>HP</option>
            <option>Huawei</option>
            <option>HyperX</option>
            <option>JBL</option>
            <option>Jabra</option>
            <option>LG</option>
            <option>Lenovo</option>
            <option>Logitech</option>
            <option>MSI</option>
            <option>Microsoft</option>
            <option>Motorola</option>
            <option>Nokia</option>
            <option>OnePlus</option>
            <option>Oppo</option>
            <option>Panasonic</option>
            <option>Poco</option>
            <option>Razer</option>
            <option>Realme</option>
            <option>Samsung</option>
            <option>Sennheiser</option>
            <option>Skullcandy</option>
            <option>Sony</option>
            <option>Vivo</option>
            <option>Xiaomi</option>
        </select>
    </div>

    <div class="form-group">
        <label for="mainPhoto">Foto:</label>
        <input type="text" id="mainPhoto" name="mainPhoto">
    </div>

    <div class="form-group">
        <label for="price">Precio:</label>
        <input type="text" id="price" name="price">
    </div>

    <div class="form-group">
        <label for="stock">Stock:</label>
        <input type="text" id="stock" name="stock">
    </div>

    <div class="form-group">
        <label for="category">Categoría:</label>
        <input type="text" id="category" name="category">
    </div>

    <div class="form-group">
        <label for="shortDescription">Descripción corta:</label>
        <input type="text" id="shortDescription" name="shortDescription">
    </div>

    <div class="form-group">
        <label for="longDescription">Descripción larga:</label>
        <input type="text" id="longDescription" name="longDescription">
    </div>

    <div class="form-group">
        <label for="freeShipping">Envío gratis:</label>
        <input type="text" id="freeShipping" name="freeShipping">
    </div>

    <div class="form-group">
        <input type="submit" value="Dar de alta">
        <input type="reset">
    </div>

</form>